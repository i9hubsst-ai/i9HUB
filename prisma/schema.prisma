  ISO
  IMSST
  CUSTOM
}

enum TemplateStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum QuestionType {
  BOOLEAN
  SCORE
}

enum QuestionSource {
  MANUAL
  AI
}

enum AssessmentStatus {
  DRAFT
  IN_PROGRESS
  SUBMITTED
  SCORED
  COMPLETED
}

enum FindingSeverity {
  HIGH
  MEDIUM
  LOW
