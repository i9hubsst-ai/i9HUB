  LOCAL_PDF      // Upload manual de PDF
  EXTERNAL_LINK  // Apenas link externo (sem IA)
  AUTO_SYNC      // Sincronização automática de URL
}

enum FeedbackType {
  POSITIVE
  NEGATIVE
}

enum FeedbackStatus {
  PENDING
  PROCESSED
  REVIEWED
  IGNORED
}

enum DocumentStatus {
  PROCESSING
  READY
  ERROR
}

// Modelo para captura de leads da landing page MA.IA - Pré-Lançamento
model Lead {
  id            String    @id @default(cuid())
  
  // 1. Informações Básicas
  name          String
  email         String    @unique
  phone         String?
  company       String
  
  // Cargo/Função (enum)
  cargo         String    @default("outro") // engenheiro_seguranca, tecnico_seguranca, gestor_sst_rh, consultor_autonomo, empresario_diretor, outro
  cargoOutro    String?   // Quando cargo = "outro"
  
  // 2. Segmento de Atuação
  setor         String    @default("outro") // industria, construcao_civil, servicos, transporte_logistica, energia, saude, outro
  setorOutro    String?   // Quando setor = "outro"
  
  // 3. Desafios Atuais em SST (até 3 opções - JSON array)
  desafios      String    @default("[]") // JSON array: ["cumprimento_nrs", "gestao_pgr", "controle_epis", "treinamentos", "gestao_riscos", "auditorias", "integracao_sistemas", "outro"]
  desafiosOutro String?   // Descrição do desafio "outro"
  
  // 4. Interesse na Plataforma
  tipoUso       String    @default("uso_proprio") // uso_proprio, atender_clientes, implantar_empresa, revender, apenas_conhecer
  
  // 5. Tipo de Acesso Desejado
  tipoAcesso    String    @default("gratuito") // gratuito, profissional, corporativo
  
  // 6. Expectativa
  expectativa   String?   // Campo aberto: "O que você mais gostaria que o MA.IA fizesse?"
  
  // 7. Autorização e Consentimento
  consentimento Boolean   @default(false) // Autoriza contato e receber novidades
  
  // Metadata para tracking
  source        String?   @default("landing-maia") // Origem do lead
  utm_source    String?   // UTM tracking
  utm_campaign  String?
  utm_medium    String?
  
  // Segmentação automática (mantido para compatibilidade)
  segment       String?   // "tecnico" | "engenheiro" | "gestor"
  
  // Lifecycle
  status        String    @default("new") // new, contacted, qualified, converted, lost
  notes         String?   // Notas do follow-up comercial
  
  // Timestamps
  createdAt     DateTime  @default(now())
  convertedAt   DateTime? // Quando virou cliente
  lastContactAt DateTime? // Último contato comercial
  
  // Relação com usuário (quando converter)
  userId        String?   @unique
  
  // Relação com mensagens do chat
  messages      ChatMessage[]
  
  @@index([email])
  @@index([status])
  @@index([segment])
  @@index([cargo])
  @@index([setor])
  @@index([tipoAcesso])
  @@index([createdAt])
  @@map("leads")
}

// Histórico de conversas do chat MA.IA para leads (pré-lançamento)
model ChatMessage {
  id        String   @id @default(cuid())
  
  // Vinculação com Lead (não requer autenticação)
  leadId    String
  lead      Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)
  
  // Conteúdo da mensagem
  role      String   // "user" ou "assistant"
  content   String   @db.Text
  
  // Metadata
  tokens    Int?     // Tokens gastos (se aplicável)
  model     String?  // Modelo de IA usado
  
  // Timestamps
  createdAt DateTime @default(now())
  
  @@index([leadId])
  @@index([createdAt])
  @@map("chat_messages")
}
